<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email verification</title>
    <style>
/* CSS */
body, html {
  height: 100%;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.outer-container {
  text-align: center;
}

h1 {
  font-size: 36px; /* Increase the text size for the email */
}

.tick-container {
  margin: 20px 0;
}

.tick {
  width: 300px; /* Make the tick larger */
  height: 300px; /* Make the tick larger */
  border: 4px solid blue;
  border-top: none;
  border-right: none;
  transform: rotate(20deg);
  display: inline-block;
  border-radius: 50%; /* Add circular border */
  position: relative; /* Add relative position to center text within the tick */
}

.tick::after {
  content: "âœ”"; /* Add a tick symbol inside the cross */
  position: absolute;
  top: 50%;
  left: 50%;
  color: green;
  transform: translate(-50%, -50%); /* Center the tick symbol */
  font-size: 200px; /* Increase the tick symbol size */
}

.verified-text {
  color: green;
  margin-bottom: 20px;
  font-size: 50px; /* Increase the text size for the verification text */
}
a{
  color: blue;
  margin-bottom: 20px;
  font-size: 20px;
}
    </style>
    
</head>

<body>
    
    <div class="outer-container">
      <h1>
        <%=email%>
      </h1>
      <div class="tick-container">
        <div id="VerifiedORNot" class="cross"></div>
      </div>
      <div class="verified-text">Email not Verified</div>
      <div id="myDiv"></div>
    </div>
    <script>
        var status = '<%- JSON.stringify(status) %>';
        var frontendURL = '<%- frontendURL %>'
        if (JSON.parse(status) == "verified") {
            const elem = document.getElementById("VerifiedORNot");
            elem.classList.remove("cross");
            elem.classList.add("tick");
            var element = document.querySelector(".verified-text");
            element.textContent = "Email Verified";
             var parentElement = document.getElementById("myDiv");
            var anchorTag = document.createElement("a");
            anchorTag.href = `${frontendURL}login`;
            anchorTag.textContent = "Redirect to Login page";
            parentElement.appendChild(anchorTag);

        }
    </script>
</body>

</html>
